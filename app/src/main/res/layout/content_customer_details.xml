<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Activity.CustomerInfo"
    tools:showIn="@layout/activity_customer_details">
    <ImageView
        android:id="@+id/iv_display_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_user"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tv_display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_display_image"
        android:layout_marginTop="@dimen/margin_top"
        android:text="hcxnvm"
        android:textSize="@dimen/text_size"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tv_display_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_display_name"
        android:layout_marginTop="@dimen/margin_top"
        android:text="dfdffddf"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tv_display_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_display_mobile"
        android:layout_marginTop="@dimen/margin_top"
        android:text="hcxnvm"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/tv_display_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_display_email"
        android:layout_marginTop="@dimen/margin_top"
        android:textColor="@color/colorAccent"
        android:text="hcxnvm"
        android:textSize="@dimen/text_size"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
